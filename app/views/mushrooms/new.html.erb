<%= simple_form_for @mushroom do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category %>
  <%= f.input :color %>
  <%= f.input :price %>
  <%= f.input :trippy, :label => 'Trippy', :value => true %>
  <%= f.input :eatable, :label => 'Eatable', :value => true %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit %>
<% end %>
