
<%= render "shared/header" %>
<div class="cards" >
  <% @mushrooms.each do |mushroom|%>
    <div class="card" style="width: 18rem">
        <div class="card-body">
          <h2 class="card-title">
            <%= link_to mushroom.name, mushroom_path(mushroom)%>
          </h2>
          <p class="card-text">
            <%= mushroom.category %>
            <%= mushroom.color%>
          </p>
        </div>
    </div>
  <% end %>
</div>
